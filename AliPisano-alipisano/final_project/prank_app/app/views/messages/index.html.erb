<h1>Listing messages</h1>
 
<table>
  <tr>
    <th>Recipient</th>
    <th>Image</th>
    <th colspan="2"></th>
  </tr>
 
  <% @messages.each do |message| %>
    <tr>
      <td><%= message.recipient %></td>
      <td><%= message.image %></td>
      <td><%= link_to 'Show', message_path(message) %></td>
      <td><%= link_to 'Edit', edit_message_path(message) %></td>
      <td><%= link_to 'Destroy', message_path(message),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', new_message_path, class: 'btn btn-lg btn-warning' %>