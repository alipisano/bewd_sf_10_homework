<h1>Listing messages</h1>

<!-- Using Bootstrap grid system -->
<div class="col-md-4">
  <!--make table scroll horizontally on small devices -->
  <div class="table-responsive">
  <!-- hover state on table rows -->
    <table class="table table-hover">
      <!-- Start of table -->
      <tr>
        <th>Recipient </th>
        <th>Image  </th>
        <th>Actions</th>
      </tr>
 
  <% @messages.each do |message| %>
    <tr>
      <td class="col-md-2"> <%= message.recipient %></td>
      <td><%= message.image %></td>
      <td><%= link_to 'Show', message_path(message), class: 'btn btn-default btn-xs' %></td>
      <td><%= link_to 'Edit', edit_message_path(message), class: 'btn btn-primary btn-xs' %></td>
      <td><%= link_to 'Destroy', message_path(message),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-info' %>
        </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', new_message_path, class: 'btn btn-md btn-info' %>