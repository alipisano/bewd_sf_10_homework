<h1>New Message</h1>

<%= form_for @message do |f| %>
  <p>
    <%= f.label :recipient %><br>
    <%= f.text_field :recipient %>
  </p>
 
  <p>
    <%= f.label :image %><br>
    <%= f.text_area :image %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', messages_path, class: 'btn btn-lg btn-warning' %>